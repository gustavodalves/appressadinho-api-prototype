// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid()) @map("_id")
  name      String
  birthDate DateTime
  cpf       String    @unique
  city      String
  state     String
  gender    String
  email     String    @unique
  password  String
  UseTime   UseTime[]
}

model UseTime {
  id      String   @id @default(uuid()) @map("_id")
  startAt DateTime
  endAt   DateTime

  userId String
  user   User   @relation(fields: [userId], references: [id])
}
