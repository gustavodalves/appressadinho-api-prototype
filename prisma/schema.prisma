// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  birthDate DateTime
  cpf       String    @unique
  city      String
  state     String
  UseTime   UseTime[]
}

model UseTime {
  id      String   @id @default(uuid())
  startAt DateTime
  endAt   DateTime

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
